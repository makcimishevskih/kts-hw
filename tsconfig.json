{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "App": [ "App/*" ],
      "hooks": [ "hooks/*" ],
      "utils": [ "utils/*" ],
      "store": [ "store/*" ],
      "config": [ "config/*" ],
      "assets": [ "assets/*" ],
      "styles": [ "styles/*" ],
      "routes": [ "routes/*" ],
      "pages": [ "App/pages/*" ],
      "entities": [ "entities/*" ],
      "providers": [ "providers/*" ],
      "components": [ "components/*" ]
    },
    "target": "ES2020",
    "module": "ESNext",
    "skipLibCheck": true,
    "useDefineForClassFields": true,
    "lib": [ "ES2020", "DOM", "DOM.Iterable" ],

    "noEmit": true,
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "isolatedModules": true,
    "noUnusedLocals": true,

    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "jsxImportSource": "react",
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [ "src" ],
  "references": [ { "path": "./tsconfig.node.json" } ],
  "exclude": [
    "node_modules",
    "./src/**/*.spec.ts"
  ]
}
